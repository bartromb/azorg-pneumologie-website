<style>
.topbar {
  background: #0F0F1A; color: rgba(255,255,255,.6);
  font-size: 12px; height: 34px;
  display: flex; align-items: center; justify-content: space-between;
  padding: 0 48px;
}
.topbar a { color: rgba(255,255,255,.6); text-decoration: none; margin-left: 16px; transition: color .18s; }
.topbar a:hover { color: #fff; }

nav {
  position: sticky; top: 0; z-index: 300;
  background: var(--white); border-bottom: 3px solid var(--red);
  height: var(--nav-h);
  display: flex; align-items: center; justify-content: space-between;
  padding: 0 48px;
  box-shadow: 0 1px 16px rgba(0,0,0,.07);
}
.nav-left { display: flex; align-items: center; gap: 14px; }
.logo-link { display: flex; align-items: center; text-decoration: none; }
.logo-pill {
  display: flex; align-items: center;
  background: var(--red); border-radius: 6px;
  padding: 5px 9px; color: white;
}
.logo-pill svg { height: 38px; width: auto; display: block; }
.nav-divider { width: 1px; height: 28px; background: var(--border); }
.nav-service { font-family: var(--font-serif); font-size: 15px; color: var(--text); font-weight: 600; }
.nav-service small {
  display: block; font-family: var(--font-sans);
  font-size: 10.5px; color: var(--red); font-weight: 700;
  letter-spacing: .07em; text-transform: uppercase; margin-top: 1px;
}
.nav-links { display: flex; align-items: center; }
.nl {
  padding: 0 13px; height: var(--nav-h);
  display: inline-flex; align-items: center;
  font-size: 13.5px; font-weight: 600;
  color: var(--text); text-decoration: none;
  border-bottom: 3px solid transparent;
  transition: all .2s; white-space: nowrap;
}
.nl:hover, .nl.act { color: var(--red); border-bottom-color: var(--red); }
.nav-cta {
  margin-left: 14px; background: var(--red); color: #fff;
  padding: 9px 20px; border-radius: 4px;
  font-size: 13.5px; font-weight: 700;
  text-decoration: none; display: inline-flex; align-items: center; gap: 7px;
  transition: all .2s; white-space: nowrap;
}
.nav-cta:hover { background: var(--red-d); transform: translateY(-1px); }
@media(max-width:960px) {
  .topbar, nav { padding: 0 20px; }
  .nav-links { display: none; }
}
